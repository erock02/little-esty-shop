<h1> Update Discount </h1>
<%= form_with url: merchant_discount_path(@merchant, @discount), method: :patch, local: true do |f| %>
<%= f.label :discount, 'Discount Percent' %>
<%= f.text_field :discount, value: @discount.discount  %> <br><br>
<%= f.label :threshold, 'Quantity threshold' %>
<%= f.text_field :threshold , value: @discount.threshold %> <br><br>
<%= f.submit 'Update' %>
<% end %>
