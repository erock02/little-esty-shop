<h1>Merchant Discounts Index</h1>
<%= link_to 'Create New Discount', new_merchant_discount_path(@merchant) %>
<h2><%= @merchant.name %>'s Discounts</h2>

<div class="discount_index">
  <% @discounts.each do |discount| %>
  <li> <%="Buy #{discount.threshold} items, get #{discount.discount}% off" %></li>
  <%= link_to "Delete #{discount.threshold} items, #{discount.discount}%  Discount", merchant_discount_path(@merchant, discount.id), method: :delete %>
  <% end %>
</div>
<br>
<h3>Upcoming Holidays</h3>
<div class="upcoming_holidays">
  <% @holidays.get_holidays.first(3).each do |holiday| %>
  <li> <%= holiday %></li>
  <% end %>
</div>
